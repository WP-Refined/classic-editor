    "@vitejs/plugin-vue": "^2.0.0",
    "autoprefixer": "^10.4.1",
    "axios": "^0.24.0",
    "electron": "^16.0.5",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
